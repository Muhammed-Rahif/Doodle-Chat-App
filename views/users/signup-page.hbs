<div class="glass-size justify-content-center p-5">
    <div class="col-md-12">
        <h2 class="text-center text-white">Signup page...</h2>
    </div>
    <form>
        <div class="col-md-12 text-white">
            <label for="" class="form-label">Name</label>
            <input type="name" class="form-control bg-light-blue" id="" placeholder="Name">
        </div>
        <div class="col-md-12 text-white">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input placeholder="Email" type="email" class="form-control bg-light-blue" id="exampleInputEmail1" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text text-white">We'll never share your email with anyone else.</div>
        </div>
        <div class="col-md-12 text-white">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control bg-light-blue" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary glass mt-2">Submit</button>
    </form>
</div>